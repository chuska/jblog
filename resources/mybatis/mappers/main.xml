<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="main">

<select id="searchByTitle" parameterType ="String" resultType="BlogVo">
select * from blog where title =#{title }
</select>


<select id="searchByTag" parameterType ="String" resultType="BlogVo">
select * from blog where tag =#{tag }
</select>


<select id="searchByName" parameterType ="String" resultType="BlogUserVo">
select * from blog_user where user_name = #{userNam }
</select>

</mapper>